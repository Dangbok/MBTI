<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="MBTI APP"
        android:fontFamily="@font/kimnamyun"
        android:background="@color/light_8"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="45sp" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="55dp"
        android:src="@drawable/group_ic">

    </ImageView>

    <Button
        android:id="@+id/btn_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:text="나의 MBTI는?"
        android:drawableLeft="@drawable/bulb_icon"
        android:drawableRight="@drawable/bulb_icon"
        android:drawablePadding="3dp"
        android:fontFamily="@font/kimnamyun"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/round_shape"
        android:backgroundTint="#31B536">
    </Button>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:drawableStart="@drawable/id_icon"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:background="@drawable/round_shape">

    </EditText>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:hint="비밀번호"
        android:drawableStart="@drawable/pass_icon"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:background="@drawable/round_shape">

    </EditText>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="로그인"
        android:fontFamily="@font/mapopeacefull"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#000000">

    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="아직 회원이 아니신가요?"
        android:fontFamily="@font/mapopeacefull"
        android:textSize="15sp"
        android:layout_marginBottom="15dp">

    </TextView>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="회원가입"
        android:fontFamily="@font/mapopeacefull"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000">

    </Button>







</LinearLayout>